<!DOCTYPE html>
<html>
  <head>
    <title>BandManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <div>
  <% if logged_in?%>
  <%= link_to "Add a Venue", new_venue_path %> |
  <%= link_to "All Venues", venues_path %> |
  <%= link_to "My Venues", user_venues_path(current_user) %> |
  <%= link_to "Add a Concert", new_concert_path %> |
  <%= link_to "All Concerts", concerts_path %> |
  <%= link_to "Home", user_path(current_user)%> |
  <%= link_to "Logout", logout_path, method:"delete"%>

  <% else %>
  <%=link_to "Sign Up", signup_path %> |
  <%=link_to "Log In", login_path %>
  <% end %>

</div>

<div>
  <% if flash[:message] %>
      <%= flash[:message]%>

  <% end %>
  <%= @error%>
</div>
    <%= yield %>
  </body>
</html>
